layout {

  default_tab_template {
    children
    pane size=1 borderless=true {
      plugin location="zellij:compact-bar"
    }
    pane size=1 borderless=true {
        plugin location="status-bar"
    }
  }

  tab name="editor" {
    pane name="neovim"
  }
  tab name="terminal" {
    pane name="terminal"
  }
}
